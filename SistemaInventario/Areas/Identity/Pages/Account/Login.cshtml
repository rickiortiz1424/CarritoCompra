@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e6f7ff; /* Light Blue */
            color: #004d4d; /* Dark Cyan */
        }

        .container {
            margin-top: 50px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #2196F3; /* Blue */
            color: black; /* Text color on blue background */
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background-color: #4caf50; /* Green */
            border-color: #4caf50;
        }

            .btn-primary:hover {
                background-color: #45a049; /* Darker Green */
                border-color: #45a049;
            }

        .alert {
            margin-top: 1rem;
            background-color: #ffcccb; /* Light Coral */
            border-color: #ff6347; /* Tomato */
            color: #8b0000; /* Dark Red */
        }

        .btn-secondary {
            background-color: #4285f4; /* Google Blue */
            border-color: #4285f4;
        }

            .btn-secondary:hover {
                background-color: #1c5fce; /* Darker Blue */
                border-color: #1c5fce;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4">
                    <h3 class="text-center mb-4">Bienvenido</h3>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert" role="alert"></div>

                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Ingresar</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}